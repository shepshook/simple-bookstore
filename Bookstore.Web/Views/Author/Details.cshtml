@model Author

@{
    ViewBag.Title = Model.ToString();
}

<div class="card">
    <div class="card-header">
        <h3>@(Model)'s books</h3>
    </div>
    <div class="card-body">
        @if (Model.BookAuthors.Count == 0)
        {
            <i class="text-black-50">No info about this author's books</i>
        }
        else
        {
            <table class="table table-hover">
                @foreach (var ba in Model.BookAuthors)
                {
                    <tr>
                        <td>
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@ba.BookId">@ba.Book.Title</a>
                        </td>
                        <td>
                            <img src="@ba.Book.CoverImage" alt=""/>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
    <div class="card-footer text-right">
        <a asp-action="List" class="btn btn-outline-primary">Home</a>
    </div>
</div>